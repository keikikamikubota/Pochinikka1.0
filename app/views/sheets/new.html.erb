<h1>インポート設定</h1>

<%= form_with(model: @sheet, local: true) do |f| %>

  <% if @sheet.errors.any? %>
    <div id="error_explanation">
      <h2><%= @sheet.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @sheet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.collection_select :sheet_id, Sheet.all, :id, :title %>
  </div>

  <hr>
<!--ネストされたインポート設定-->
    <%= f.fields_for :import_details do |detail_fields| %>

      <div class="field">
        <%#= detail_fields.hidden_field :sheet_column_number, value: detail_fields.index + 1 %>
        <%= detail_fields.label :"カラム番号" %><br>
        <%= detail_fields.select :sheet_column_number,(1..20).to_a, required: true %>
        <%#= detail_fields.index + 1 %>
      </div>

      <div class="field" >
        <%= detail_fields.label :"インポート設定" %><br>
        <%= detail_fields.select :selected_title, ImportDetail.selected_titles.keys.map { |key| [I18n.t("enums.import_detail.selected_title.#{key}"), key] },
                                 { include_blank: '選択してください' } %>

      </div>

    <br>
    <% end %>

  <%= f.submit "インポート参照画面へ" %>
<% end %>