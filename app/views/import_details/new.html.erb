<%= form_with(model: @import_detail, local: true) do |f| %>
  <% if @import_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= @import_detail.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @import_detail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :"カラム番号" %><br>
    <%= f.number_field :sheet_column_number %>
  </div>

  <div class="field" >
    <%= f.label :"インポート設定" %><br>
    <%= f.select :selected_title %>
  </div>

  <div class="field">
    <%= f.label :"シート番号" %><br>
    <%= f.number_field :sheet_id %>
  </div>

  <%= f.submit "インポート参照画面へ" %>
<% end %>