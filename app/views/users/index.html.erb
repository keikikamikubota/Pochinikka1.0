<h1>顧客マスタ一覧</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>顧客名</th>
    <th>email</th>
    <th>TEL</th>
    <th>備考</th>
    <th>管理者メモ</th>
    <th>作成日</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user|%>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %>
      <td><%= user.phone %></td>
      <td><%= user.note %></td>
      <td><%= user.admin_note %></td>
      <td><%= link_to "詳細", user %></td>
      <td><%= link_to "編集", edit_user_path(user) %></td>
      <td><%= button_to "削除", user, method: :delete,
                        data: { turbo_confirm: "本当に削除しますか？" } %></td>
    </tr>
  <% end %>
  </table>
